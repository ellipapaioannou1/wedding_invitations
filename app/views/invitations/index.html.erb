<div id="index-page">


<figure class="text-center">
  <h1>Invitations</h1>
</figure>

<%= link_to 'New Invitation', new_invitation_path,  class:"btn btn-outline-secondary btn-lg" %>

<table>

  <thead>
    <tr>
      <th><h7>Name</h7></th>
      <th width="1"><h7>Total Number</h7></th>
      <th width="1"><h7>Confirmed Number</h7></th>
      <th colspan="3"></th>
    </tr>
  
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.name%></td>
        <td><%= invitation.persons_count %></td>
        <td></td>  
        <td width="1"><%= link_to 'Show', invitation, class:"btn btn-outline-secondary btn-light btn-sm" %>        </td>
        <td width="1"><%= link_to 'Edit',  edit_invitation_path(invitation), class:"btn btn-outline-secondary btn-light  btn-sm" %></td>
        <td width="1"><%= link_to 'Delete', invitation, class:"btn btn-outline-secondary btn-light btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
  <tr>
  <td colspan="0" style="text-align:center;"><b>Total Invitees:</b></td>
  <td>Δεν έχω ιδεά πως το κάνω</td>
  </tr>

</table>




