<h1 class="display-4">Welcome</h1>

<% if Current.user %>

  <%= button_to 'New Invitation', new_invitation_path %>
  <%= button_to 'Logout', logout_path, method: :delete %>
  <% else %>
  
  <%= link_to 'Sign Up', sign_up_path, class:"btn btn-outline-secondary btn-lg" %>
  <%= link_to 'Login', sign_in_path, class:"btn btn-outline-secondary btn-lg" %>

<% end %>

